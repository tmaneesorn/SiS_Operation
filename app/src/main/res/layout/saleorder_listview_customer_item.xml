<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutCustomerList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_normal"
    android:background="@drawable/background_edittext_white">

    <CheckBox
        android:id="@+id/checkboxSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/linearLayoutCustomerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginLeft="@dimen/padding_small"
        android:layout_toRightOf="@+id/checkboxSelected">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <sis.com.sis.sis_app.Views.CustomTextViewBold
                android:id="@+id/textViewCusCodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Code : "
                android:textColor="@color/colorBlueMedium"
                android:textSize="@dimen/font_normal" />

            <sis.com.sis.sis_app.Views.CustomTextView
                android:id="@+id/textViewCusCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:text="110000001"
                android:layout_toRightOf="@+id/textViewCusCodeTitle"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <sis.com.sis.sis_app.Views.CustomTextViewBold
                android:id="@+id/textViewCusNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name : "
                android:textSize="@dimen/font_normal"
                android:textColor="@color/colorBlueMedium"/>

            <sis.com.sis.sis_app.Views.CustomTextView
                android:id="@+id/textViewCusName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/font_normal"
                android:text="110000001"
                android:layout_toRightOf="@+id/textViewCusNameTitle"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutCustomerNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <sis.com.sis.sis_app.Views.CustomTextViewBold
                android:id="@+id/textViewCusNickNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nickname : "
                android:textColor="@color/colorBlueMedium"
                android:textSize="@dimen/font_normal" />

            <sis.com.sis.sis_app.Views.CustomTextView
                android:id="@+id/textViewCusNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:text="110000001"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/textViewCusNickNameTitle"/>

        </RelativeLayout>

        <View
            android:id="@+id/viewHeader"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/padding_small"
            android:background="@color/colorBlack"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/relativeLayoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:visibility="gone">

            <sis.com.sis.sis_app.Views.CustomTextViewBold
                android:id="@+id/textViewShipToAddressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:textColor="@color/colorBlueMedium"
                android:textSize="@dimen/font_normal" />

            <sis.com.sis.sis_app.Views.CustomTextView
                android:id="@+id/textViewShipToAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textViewShipToAddressTitle"
                android:text="110000001"
                android:textSize="@dimen/font_normal" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayoutListKit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <sis.com.sis.sis_app.Views.CustomTextViewBold
                android:id="@+id/textViewKITTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KIT Article Detail : "
                android:textColor="@color/colorBlueMedium"
                android:textSize="@dimen/font_normal" />

            <sis.com.sis.sis_app.Views.CustomTextView
                android:id="@+id/textViewKIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewKITTitle"
                android:ellipsize="end"
                android:text="-"
                android:textSize="@dimen/font_normal" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>