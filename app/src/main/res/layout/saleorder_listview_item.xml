<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayoutItemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_small"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <sis.com.sis.sis_app.Views.CustomTextViewBold
                android:id="@+id/textViewPartNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Part NO."
                android:textSize="@dimen/font_normal"
                android:textColor="@color/colorBlueMedium"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <sis.com.sis.sis_app.Views.CustomTextView
                    android:id="@+id/textViewQtyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty. :"
                    android:layout_marginRight="@dimen/padding_small"
                    android:textSize="@dimen/font_normal"
                    android:layout_centerVertical="true" />

                <sis.com.sis.sis_app.Views.CustomTextView
                    android:id="@+id/textViewQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textViewQtyTitle"
                    android:hint="0"
                    android:textSize="@dimen/font_normal" />

            </RelativeLayout>

        </RelativeLayout>


        <sis.com.sis.sis_app.Views.CustomTextView
            android:id="@+id/textViewPartDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:text="Part Description"
            android:ellipsize="end"
            android:lines="1"
            android:layout_toLeftOf="@+id/relativeLayoutPrice"
            android:layout_marginTop="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <sis.com.sis.sis_app.Views.CustomTextViewBold
                    android:id="@+id/textViewPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price : "
                    android:textSize="@dimen/font_normal"/>

                <sis.com.sis.sis_app.Views.CustomTextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_normal"
                    android:text="- THB"
                    android:layout_toRightOf="@+id/textViewPriceTitle"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <sis.com.sis.sis_app.Views.CustomTextView
                    android:id="@+id/textViewTotalPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price :"
                    android:layout_marginRight="@dimen/padding_small"
                    android:textSize="@dimen/font_normal"
                    android:layout_centerVertical="true" />

                <sis.com.sis.sis_app.Views.CustomTextView
                    android:id="@+id/textViewTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- THB"
                    android:layout_marginRight="@dimen/padding_small"
                    android:textSize="@dimen/font_normal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewTotalPriceTitle"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>