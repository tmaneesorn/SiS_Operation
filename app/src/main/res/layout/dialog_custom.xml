<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:layout_gravity="center"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:padding="@dimen/padding_normal"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/popup_width"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="@dimen/padding_normal">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <sis.com.sis.sis_app.Views.CustomTextViewBold
                android:padding="@dimen/padding_normal"
                android:lineSpacingMultiplier="0.75"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_large"
                android:layout_marginStart="@dimen/padding_large"
                android:gravity="center"
                android:maxLines="2"
                android:id="@+id/tvTitle"
                android:text="title"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />


            <ImageView
                android:layout_marginBottom="@dimen/padding_normal"
                android:id="@+id/imageView"
                android:layout_gravity="center"
                android:src="@drawable/ic_dashboard_black_24dp"
                android:layout_width="76dp"
                android:layout_height="76dp" />


            <sis.com.sis.sis_app.Views.CustomTextView
                android:padding="@dimen/padding_small"
                android:lineSpacingMultiplier="0.75"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_large"
                android:layout_marginStart="@dimen/padding_large"
                android:gravity="center"
                android:maxLines="2"
                android:id="@+id/tvDescription"
                android:text="Description"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/colorPrimaryDark" />

            <sis.com.sis.sis_app.Views.CustomButtonBold
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/btnAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_normal"
                android:layout_marginBottom="@dimen/padding_normal"
                android:background="@drawable/button_primary_round"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/padding_normal"
                android:paddingBottom="@dimen/padding_small"
                android:text="Continue"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_large"
                android:textStyle="bold" />

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>