<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_edittext_white">

    <LinearLayout
        android:visibility="gone"
        android:id="@id/linearLayoutUrgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <sis.com.sis.sis_app.Views.CustomTextView
            android:id="@+id/textViewUrgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_normal"
            android:text="@string/message_urgent"
            android:paddingTop="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:textColor="@color/colorWhite"
            android:background="@color/colorRed"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_normal"
            android:layout_marginRight="@dimen/padding_normal"
            android:background="@color/colorYellowLight">

            <sis.com.sis.sis_app.Views.CustomTextView
                android:id="@+id/textViewUrgentReasonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เหตุผล : "
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingTop="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"/>

            <sis.com.sis.sis_app.Views.CustomTextView
                android:id="@+id/textViewUrgentReason"
                android:layout_toRightOf="@+id/textViewUrgentReasonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/message_urgent"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:background="@color/colorYellowLight"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGreyLight"
            android:layout_marginTop="@dimen/padding_normal"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relativeLayoutShipToOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutUrgent"
        android:padding="@dimen/padding_normal">

        <RelativeLayout
            android:id="@+id/relativeLayoutSaleOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <sis.com.sis.sis_app.Views.CustomTextViewBold
                        android:id="@+id/textViewArticle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="DEL-SNSE2216HV"
                        android:textColor="@color/colorBlueMedium"
                        android:textSize="16dp"
                        android:textStyle="bold">

                    </sis.com.sis.sis_app.Views.CustomTextViewBold>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <sis.com.sis.sis_app.Views.CustomTextView
                        android:id="@+id/textViewDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="Dell(TM) E series E2216HV 22"
                        android:textColor="@color/colorBlueMedium"
                        android:textSize="16dp">

                    </sis.com.sis.sis_app.Views.CustomTextView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <sis.com.sis.sis_app.Views.CustomTextViewBold
                            android:id="@+id/textViewQtyTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"

                            android:text="Qty : "
                            android:textColor="@color/colorGreyDark"
                            android:textSize="@dimen/font_normal">

                        </sis.com.sis.sis_app.Views.CustomTextViewBold>

                        <sis.com.sis.sis_app.Views.CustomTextView
                            android:id="@+id/textQtyItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/textViewQtyTitle"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_small"
                            android:text="3"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="@dimen/font_normal"></sis.com.sis.sis_app.Views.CustomTextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayoutPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <sis.com.sis.sis_app.Views.CustomTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Total Price : "

                                android:textColor="@color/colorGreyDark"
                                android:textSize="@dimen/font_normal"></sis.com.sis.sis_app.Views.CustomTextViewBold>

                            <sis.com.sis.sis_app.Views.CustomTextView
                                android:id="@+id/textPriceItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/padding_small"
                                android:text="12,090.00"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="@dimen/font_normal"></sis.com.sis.sis_app.Views.CustomTextView>

                            <sis.com.sis.sis_app.Views.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/padding_small"
                                android:text="THB"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="@dimen/font_normal"></sis.com.sis.sis_app.Views.CustomTextView>
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutReasonBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutSaleOrder"
                    android:orientation="horizontal">

                    <sis.com.sis.sis_app.Views.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_item_block"
                        android:textColor="@color/colorBlueMedium"
                        android:textSize="@dimen/font_normal">

                    </sis.com.sis.sis_app.Views.CustomTextViewBold>

                    <sis.com.sis.sis_app.Views.CustomTextView
                        android:id="@+id/textViewReason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="-"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/font_normal">

                    </sis.com.sis.sis_app.Views.CustomTextView>

                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>






